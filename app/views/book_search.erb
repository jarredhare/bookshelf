<% @books.each do |book| %>
  <% next if book.isbn == nil %>
  <div class="container book">
    <div class="row">
      <div class="col-md-2">
        <img id="img_url" class="img-rounded" src="<%= book.image_link %>">
        <h4 id="categories"><%= book.categories %></h4>
        <h4 id="isbn">ISBN: <%= book.isbn %></h4>
        <h4 id="average_rating">Avg. Rating <%= book.average_rating %></h4>
      </div>
      <div class="col-md-4">
        <h2 id="title"><%= book.title %></h2>
        <h3 id="author"><%= book.authors %></h3>
      </div>
      <div class="col-md-10">
        <p id="description"><%= book.description %></p>
        <% if user_has_book(book.isbn) %>
          <button type="submit" class="btn btn-primary add-book disabled">Added</button>
        <% else %>
          <form role="form" class="add-form" action="/books" method="post">
            <button type="submit" class="btn btn-primary add-book">Add book to your shelf</button>
         </form>
        <% end %>
      </div>
    </div>
  </div>
<% end %>