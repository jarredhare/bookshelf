<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <form role="form" id="signin" action = "/login" method = "post">
      <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" id="email" placeholder="bob@aol.com" name="email">
      </div>
      <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" id="pwd" placeholder="******" name="password">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a href="/users/new">Or Sign Up</a>
    </form>
  </div>
</div>