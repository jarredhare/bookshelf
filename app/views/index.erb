<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <form role="form" id="signin" action = "/login" method = "post">
      <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" id="email" placeholder="bob@aol.com" name="email">
      </div>
      <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" id="pwd" placeholder="******" name="password">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a href="/users/new" class="btn btn-primary">Create Account</a>
      <a id="google-btn" href="/redirect_auth_url" class="btn btn-block btn-social btn-google-plus"><i class="fa fa-google-plus"></i>or Sign in with Google</a>
      <!-- <a href="/redirect_auth_url" class="btn btn-danger">Sign in with Google</a> -->
  </form>
</div>
</div>



